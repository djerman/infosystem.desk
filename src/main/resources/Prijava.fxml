<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" maxHeight="110.0" maxWidth="300.0" minHeight="110.0" minWidth="320.0" prefHeight="110.0" prefWidth="300.0" spacing="5.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="rs.atekom.infosystem.desk.PrijavaController">
   <padding>
      <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
   </padding>
   <children>
      <HBox alignment="CENTER" prefHeight="30.0" prefWidth="290.0">
         <children>
            <Label prefHeight="18.0" prefWidth="135.0" text="корисник/user: " HBox.hgrow="ALWAYS" />
            <Region HBox.hgrow="ALWAYS">
               <padding>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </padding>
            </Region>
            <TextField fx:id="korisnickoTxt" maxHeight="25.0" maxWidth="135.0" minHeight="25.0" minWidth="135.0" prefHeight="25.0" prefWidth="135.0" />
         </children>
      </HBox>
      <HBox alignment="CENTER" prefHeight="30.0" prefWidth="290.0">
         <children>
            <Label prefHeight="18.0" prefWidth="173.0" text="лозинка/pasword: " />
            <Region HBox.hgrow="ALWAYS">
               <padding>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </padding>
            </Region>
            <PasswordField fx:id="lozinkaTxt" maxHeight="25.0" maxWidth="135.0" minHeight="25.0" minWidth="135.0" prefHeight="25.0" prefWidth="135.0" />
         </children>
      </HBox>
      <HBox alignment="CENTER" prefHeight="30.0" prefWidth="290.0" spacing="5.0">
         <padding>
            <Insets top="10.0" />
         </padding>
         <children>
            <Button fx:id="prijavaBtn" maxHeight="25.0" maxWidth="135.0" minHeight="25.0" minWidth="135.0" mnemonicParsing="false" onAction="#prijava" prefHeight="25.0" prefWidth="135.0" text="ПРИЈАВА/LOGIN" />
            <Region HBox.hgrow="ALWAYS" />
            <Button fx:id="otkaziBtn" maxHeight="25.0" maxWidth="135.0" minHeight="25.0" minWidth="135.0" mnemonicParsing="false" onAction="#otkazi" prefHeight="25.0" prefWidth="135.0" text="ОТКАЖИ/CANCEL" />
         </children>
      </HBox>
   </children>
</VBox>
